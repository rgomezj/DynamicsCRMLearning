<style>
    .selected {
        background-color: yellow;
    }

    .handSelection {
        cursor: pointer;
    }
</style>

<div id="waitlist">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Manage Waitlist
                </div>
                <div class="panel-body">
                    <div class="row" data-bind="visible: anyWaitlist">
                        <div class="col-lg-3">
                            <form role="form">
                                <div class="form-group" data-bind="with: eventInfo">
                                    <label>Registration Limit</label>
                                    <p class="form-control-static" data-bind="text: dm_registrationlimit"></p>
                                    <p class="help-block">Registration Limit associated to the course for the waitlists.</p>
                                </div>
                            </form>
                        </div>
                        <div class="col-lg-3">
                            <form role="form">
                                <div class="form-group" data-bind="with: eventInfo">
                                    <label>Spaces Available</label>
                                    <p class="form-control-static" data-bind="text: spacesAvailable"></p>
                                    <p class="help-block">Calculated number of spaces available.</p>
                                </div>
                            </form>
                        </div>
                        <div class="col-lg-6">
                            <form role="form">
                                <div class="form-group">

                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="row" data-bind="visible: !anyWaitlist()">
                        <div class="col-lg-12">
                            <div class="panel panel-yellow">
                                <div class="panel-heading">
                                    No waitlists
                                </div>
                                <div class="panel-body">
                                    <p>There are no waitlist for this event</p>
                                </div>
                                <div class="panel-footer">

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" data-bind="visible: anyWaitlist">
                        <div class="col-lg-12">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Waitlist Since</th>
                                            <th>Prefered method</th>
                                            <th align="center">Generate Link</th>
                                            <th align="center">Send Link</th>
                                        </tr>
                                    </thead>
                                    <tbody data-bind='foreach: waitlists'>
                                        <tr data-bind='css: { handSelection: true }'>
                                            <td data-bind='text: contact.fullName'></td>
                                            <td data-bind='textualDate: createdOn'></td>
                                            <td data-bind='text: contact.preferedMethod'></td>
                                            <td>
                                                <button type="button" class="btn btn-success" data-bind='click: $root.process'>
                                                    <i class="fa fa-link">
                                                    </i>
                                                </button>
                                                <button type="button" id="OpenModalButton" class="btn btn-success" data-toggle="modal" data-target="#WaitlistsModal" data-bind='visible: false'>
                                                    <i class="fa fa-link">
                                                    </i>
                                                </button>
                                            </td>
                                            <td>
                                                <button type="button" class="btn btn-success" data-bind='click: $root.sendEmail'>
                                                    <i class="fa fa-envelope fa-fw">
                                                    </i>
                                                </button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @Scripts.Render("~/Scripts/app/waitlist.js")
    @Scripts.Render("~/Scripts/app/waitlistlookup.js")
}

@Html.Partial("WaitlistLookup")


