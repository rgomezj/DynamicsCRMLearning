<div id="transferRegistration">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Registration Transfer
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form"></form>
                        </div>
                        <div class="col-lg-4">
                            <form role="form">
                                <label>Course</label>
                                <div class="form-group input-group">
                                    <input type="text" class="form-control" data-bind="value: eventSelected.name(), disable: true">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="button" data-toggle="modal" data-target="#EventsModal" data-bind="click: openLookupEvents">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </span>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                        </div>
                        <div class="col-lg-6">
                            <form role="form">
                                <div class="form-group" data-bind="visible: anyHybrid">
                                    <label>Select Registration Type (Hybrid Events)</label>
                                    <div class="dropdown">
                                        <select class="form-control" data-bind="options: registrationType, value: selectedRegistrationType"></select>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form"></form>
                        </div>
                        <div class="col-lg-6">
                            <form role="form">
                                <div class="form-group">
                                    <label>Registration Level</label>
                                    <div data-bind="foreach: registrationOptions.registrationLevels">
                                        <div class="radio">
                                            <label>
                                                <input type="radio" data-bind='text: id, value: id, checked: registrationLevelSelected' id="radio">
                                                <span data-bind="text: name"></span>
                                                ($<span data-bind="text: unitPrice"></span>)
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form">
                                <div class="form-group">
                                    <label>Existing Classes</label>
                                    <div class="form-group">
                                        <select multiple class="form-control" data-bind="options: currentRegistrationInfo.classes , optionsText: 'dm_subject', disable: true"></select>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="col-lg-6">
                            <form role="form">
                                <div class="form-group">
                                    <label>New Classes</label>
                                    <div class="form-group">
                                        <select multiple class="form-control" data-bind="options: registrationOptions.classes ,selectedOptions: selectedClasses, optionsText: 'dm_subject', disable: true"></select>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                   
                    <div class="row">
                        <div class="col-lg-6">
                          
                        </div>
                        <div class="col-lg-6">
                            <form role="form">
                                <div class="form-group">

                                    <button class="btn btn-primary btn-lg" data-bind="click: transferRegistration">
                                        Process
                                    </button>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @Scripts.Render("~/Scripts/app/registrationTransfer.js")
    @Scripts.Render("~/Scripts/app/events.js")
}

@Html.Partial("EventLookup")



