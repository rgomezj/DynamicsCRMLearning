<style>
    .modal-body .form-horizontal .col-sm-2,
    .modal-body .form-horizontal .col-sm-10 {
        width: 100%;
    }

    .modal-body .form-horizontal .control-label {
        text-align: left;
    }

    .modal-body .form-horizontal .col-sm-offset-2 {
        margin-left: 15px;
    }
</style>

<div class="row" id="waitlistsLookup">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="modal fade" id="WaitlistsModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title"></h4>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <form role="form">
                                            <ul class="chat">
                                                <li class="left clearfix">
                                                    <span class="chat-img pull-left">
                                                        <img src="http://placehold.it/50/55C1E7/fff" alt="" class="img-circle">
                                                    </span>
                                                    <div class="chat-body clearfix">
                                                        <div class="header">
                                                            <strong class="primary-font">Registration Link</strong>
                                                            <small class="pull-right text-muted">

                                                            </small>
                                                        </div>
                                                        <p>
                                                            Please find below the link that will allow you to continue the registration process
                                                        </p>
                                                      
                                                    </div>
                                                </li>
                                            </ul>
                                            <p>
                                                <a data-bind="text: registerLink, attr: { href: registerLink }"></a>
                                            </p>
                                            <div class="form-group">

                                                @*<a data-bind="text: 'Test', attr: { href: registerLink }" />*@
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                        <!-- /.modal-content -->
                    </div>
                    <!-- /.modal-dialog -->
                </div>
                <!-- /.modal -->
            </div>
            <!-- .panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>