<div id="registrationOptions">
    <div class="row" data-bind="with: registrationOptions">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Complete Registration
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form">
                                <div class="form-group">
                                    <label>Registration Level</label>
                                    <div data-bind="foreach: registrationOptions.registrationLevels">
                                        <div class="radio">
                                            <label>
                                                <input type="radio" data-bind='text: id, value: id, checked: registrationLevelSelected' id="radio">
                                                <span data-bind="text: name"></span>
                                                ($<span data-bind="text: unitPrice"></span>)
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="col-lg-6">
                            <form role="form">
                                <div class="form-group">
                                    <label>Classes for the Course</label>
                                    <div class="form-group">
                                        <select multiple class="form-control" data-bind="options: registrationOptions.classes ,selectedOptions: selectedClasses, optionsText: 'dm_subject', disable: true"></select>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form">
                                <div class="form-group" data-bind="visible: anyHybrid">
                                    <label>Select Registration Type (Hybrid Events)</label>
                                    <div class="dropdown">
                                        <select class="form-control" data-bind="options: registrationType, value: selectedRegistrationType"></select>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="col-lg-6">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                        </div>
                        <div class="col-lg-6">
                            <form role="form">
                                <div class="form-group">
                                    <button type="button" class="btn btn-primary btn-lg btn-block" data-bind='click: $root.cancelActiveProcess'>Process</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @Scripts.Render("~/Scripts/app/registrationOptions.js")
}

