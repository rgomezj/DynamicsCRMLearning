<style>
    .modal-body .form-horizontal .col-sm-2,
    .modal-body .form-horizontal .col-sm-10 {
        width: 100%;
    }

    .modal-body .form-horizontal .control-label {
        text-align: left;
    }

    .modal-body .form-horizontal .col-sm-offset-2 {
        margin-left: 15px;
    }
</style>

<div class="row" id="contactsLookup">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="modal fade" id="ContactsModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title" data-bind="visible: loading">Loading contacts...... </h4>
                                <h4 class="modal-title" id="myModalLabel">Contacts</h4>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-lg-2 left">
                                        <div class="form-group">
                                        </div>
                                    </div>
                                    <div class="col-lg-8">
                                        <div class="form-group">
                                            <label>Name/ Email Address / Business Phone</label>
                                            <input class="form-control" data-bind="value: fullName, disable: loading">
                                            <p class="help-block">First 100 records found will be displayed.</p>
                                        </div>
                                    </div>
                                    <div class="col-lg-2">
                                        <div class="form-group">
                                            <div class="col-xs-9 text-left">
                                                
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4 left">
                                    </div>
                                    <div class="col-lg-8">
                                        <div class="form-group">
                                            <div class="col-xs-9 text-left">
                                                <button type="button" class="btn btn-success" data-bind="click: searchContacts, disable: loading">Search</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2">
                                        <div class="form-group">
                                            <div class="col-xs-9 text-left">

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                    </div>
                                </div>

                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th>Full Name</th>
                                                <th>Job Title</th>
                                                <th>Company Name</th>
                                                <th>Email</th>
                                                <th>Business Phone</th>
                                                <th>Select</th>
                                            </tr>
                                        </thead>
                                        <tbody data-bind='foreach: contacts'>
                                            <tr data-bind='css: { handSelection: true }'>
                                                <td data-bind='text: fullName'></td>
                                                <td data-bind='text: jobTitle'></td>
                                                <td data-bind='text: companyName'></td>
                                                <td data-bind='text: email'></td>
                                                <td data-bind='text: businessPhone'></td>
                                                <td>
                                                    <button type="button" class="btn btn-primary" data-bind='click: $root.selectContact'>
                                                        <span class="glyphicon glyphicon-ok-sign"> </span>
                                                    </button>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                        <!-- /.modal-content -->
                    </div>
                    <!-- /.modal-dialog -->
                </div>
                <!-- /.modal -->
            </div>
            <!-- .panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>