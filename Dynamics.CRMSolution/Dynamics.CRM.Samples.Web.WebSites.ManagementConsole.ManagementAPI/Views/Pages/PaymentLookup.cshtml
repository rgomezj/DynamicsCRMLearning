<style>
    .modal-body .form-horizontal .col-sm-2,
    .modal-body .form-horizontal .col-sm-10 {
        width: 100%;
    }

    .modal-body .form-horizontal .control-label {
        text-align: left;
    }

    .modal-body .form-horizontal .col-sm-offset-2 {
        margin-left: 15px;
    }
</style>

<div class="row" id="paymentLookup">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="modal fade" id="PaymentModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title" ></h4>
                                <h4 class="modal-title" id="myModalLabel">Refund Data</h4>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-lg-2 left">
                                        <div class="form-group">
                                        </div>
                                    </div>
                                    <div class="col-lg-8">
                                        <div class="form-group">
                                            <label>Check Number</label>
                                            <input class="form-control" data-bind="value: chequeNumber">
                                            <div class="checkbox">
                                                <label><input type="checkbox" data-bind="checked: willSpecifyLater">Will Specify it later</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2">
                                        <div class="form-group">
                                            <div class="col-xs-9 text-left">
                                                
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4 left">
                                    </div>
                                    <div class="col-lg-8">
                                        <div class="form-group">
                                            <div class="col-xs-9 text-left">
                                                <button type="button" class="btn btn-success" data-bind="click: confirmPayment">Confirm</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2">
                                        <div class="form-group">
                                            <div class="col-xs-9 text-left">

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                        <!-- /.modal-content -->
                    </div>
                    <!-- /.modal-dialog -->
                </div>
                <!-- /.modal -->
            </div>
            <!-- .panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>